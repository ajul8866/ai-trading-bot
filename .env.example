APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# PRODUCTION SECURITY CONFIGURATION
# ============================================================================
# CRITICAL: Set this for production to secure API endpoints
# Generate with: openssl rand -hex 32
# Usage: Include in API requests as header: X-API-Key: your_generated_key
# ============================================================================
API_ACCESS_KEY=

# ============================================================================
# AI TRADING BOT CONFIGURATION
# ============================================================================
# This application uses the Settings database table for most configuration.
# Settings can be managed through the web interface or via artisan commands.
# However, API keys can optionally be set here for security reasons.
# NOTE: Sensitive keys (binance, openrouter) are automatically encrypted in DB
# ============================================================================

# ----------------------------------------------------------------------------
# BINANCE API CONFIGURATION
# ----------------------------------------------------------------------------
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: For testing, use Binance Testnet: https://testnet.binancefuture.com
#
# Note: These keys are OPTIONAL in .env. The bot primarily reads from the
# 'settings' database table. However, you can set them here as a fallback
# or for easier deployment.
# ----------------------------------------------------------------------------
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true

# ----------------------------------------------------------------------------
# OPENROUTER AI CONFIGURATION
# ----------------------------------------------------------------------------
# Get your API key from: https://openrouter.ai/keys
# OpenRouter provides access to multiple AI models including Claude, GPT-4, etc.
# Default model: anthropic/claude-3.5-sonnet (configured in settings table)
# ----------------------------------------------------------------------------
OPENROUTER_API_KEY=

# ----------------------------------------------------------------------------
# CRYPTOPANIC NEWS API CONFIGURATION
# ----------------------------------------------------------------------------
# Get your FREE API key from: https://cryptopanic.com/developers/api/
# CryptoPanic provides real-time cryptocurrency news aggregation
# Used for the News Panel in the dashboard
# If not set, the news panel will be empty (NO FAKE NEWS GENERATED)
# ----------------------------------------------------------------------------
CRYPTOPANIC_API_KEY=

# ----------------------------------------------------------------------------
# TRADING BOT DEFAULT SETTINGS
# ----------------------------------------------------------------------------
# These settings provide initial defaults but can be overridden in the database.
# The bot reads from the 'settings' table at runtime, so you can change these
# values through the web UI without restarting the application.
# ----------------------------------------------------------------------------

# Bot Control
BOT_ENABLED=false

# Trading Pairs (comma-separated, no spaces)
# Examples: BTCUSDT,ETHUSDT,BNBUSDT,SOLUSDT,ADAUSDT
TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT

# Timeframes for multi-timeframe analysis (comma-separated)
# Available: 1m,3m,5m,15m,30m,1h,2h,4h,6h,8h,12h,1d,3d,1w,1M
TIMEFRAMES=5m,15m,30m,1h

# Maximum concurrent open positions (1-10 recommended)
MAX_POSITIONS=5

# Risk per trade as percentage of account balance (1-5 recommended)
RISK_PER_TRADE=2

# Daily loss limit as percentage of account balance (5-20 recommended)
DAILY_LOSS_LIMIT=10

# Minimum AI confidence required to execute trade (0-100)
# Higher = more conservative, Lower = more aggressive
MIN_CONFIDENCE=70

# Analysis interval in seconds (how often to analyze markets)
# 60 = 1 minute, 300 = 5 minutes, 600 = 10 minutes
ANALYSIS_INTERVAL=60

# Initial account balance for tracking (USDT)
INITIAL_BALANCE=10000

# AI Model Selection
# Options: anthropic/claude-3.5-sonnet, openai/gpt-4-turbo, etc.
AI_MODEL=anthropic/claude-3.5-sonnet

# AI Temperature (0.0-1.0)
# Lower = more consistent, Higher = more creative
# Recommended: 0.3-0.5 for trading decisions
AI_TEMPERATURE=0.3

# ----------------------------------------------------------------------------
# SCHEDULER & QUEUE CONFIGURATION
# ----------------------------------------------------------------------------
# The trading bot runs as scheduled jobs. Ensure these are running:
#   - php artisan schedule:work (for scheduling)
#   - php artisan queue:work (for job processing)
# ----------------------------------------------------------------------------

# Queue driver should be 'database' or 'redis' for reliability
# QUEUE_CONNECTION is already set above

# ----------------------------------------------------------------------------
# ADVANCED SETTINGS (Optional)
# ----------------------------------------------------------------------------
# These are managed in the database but can be documented here for reference

# Strategy Selection
# Available: trend_following, mean_reversion, scalping, breakout, market_making
# TRADING_STRATEGY=trend_following

# Leverage Settings (1-10, use with EXTREME caution)
# MAX_LEVERAGE=3

# Stop Loss & Take Profit (percentage)
# DEFAULT_STOP_LOSS_PCT=2
# DEFAULT_TAKE_PROFIT_PCT=4

# Risk/Reward Ratio (minimum acceptable)
# MIN_RISK_REWARD_RATIO=1.5

# Position Sizing Method
# Options: fixed, percentage, kelly_criterion, risk_based
# POSITION_SIZING_METHOD=risk_based

# ----------------------------------------------------------------------------
# MONITORING & ALERTS (Future Implementation)
# ----------------------------------------------------------------------------
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# IMPORTANT SAFETY REMINDERS
# ----------------------------------------------------------------------------
# 1. ALWAYS test on Binance Testnet first (set BINANCE_TESTNET=true)
# 2. Start with small amounts and low leverage
# 3. Monitor the bot closely, especially in the first few days
# 4. Set conservative risk parameters (low RISK_PER_TRADE, DAILY_LOSS_LIMIT)
# 5. Never invest more than you can afford to lose
# 6. This bot trades with REAL MONEY - use at your own risk
# 7. Review all AI decisions before increasing MIN_CONFIDENCE threshold
# ============================================================================
